<UserControl x:Name="uc" x:Class="Control_Library.Image_Text"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Control_Library"
             mc:Ignorable="d" 
             d:DesignHeight="25" d:DesignWidth="75">
    <Button HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Height="25">
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Button" FontSize="15"/>
            <StackPanel Orientation="Horizontal">
                <Image Source="Pics/hand.png" Height="20" Visibility="{Binding ElementName=uc, Path=Visibility}"/>
            </StackPanel>
        </StackPanel>
    </Button>
</UserControl>
