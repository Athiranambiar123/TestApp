<UserControl x:Name="uc" x:Class="Control_Library.MyButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Control_Library"
             mc:Ignorable="d" Height="25" Width="75">

    <Button x:Name="Btn" Content="Button" Background="{Binding ElementName=uc, Path=Background}"
            FontFamily="{Binding ElementName=uc, Path=ButtonFontFamily}"
            Height="{Binding ElementName=uc, Path=Height}" Width="{Binding ElementName=uc, Path=Width}"
            Foreground="{Binding ElementName=uc, Path=Foreground}"
         HorizontalAlignment="Left"  VerticalAlignment="Top" FontSize="15"/>


</UserControl>
