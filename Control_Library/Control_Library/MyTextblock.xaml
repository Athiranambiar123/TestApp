<UserControl x:Name="uc" x:Class="Control_Library.MyTextblock"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Control_Library"
             mc:Ignorable="d" 
             d:DesignHeight="25" d:DesignWidth="75">

    <TextBlock HorizontalAlignment="Left" FontSize="15" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Width="{Binding ElementName=uc, Path=Width}" Height="{Binding ElementName=uc, Path=Height}"
               FontFamily="{Binding ElementName=uc, Path=TextFontFamily}" Padding="5" FontWeight="{Binding ElementName=uc, Path=FontWeight}" />

   
</UserControl>
